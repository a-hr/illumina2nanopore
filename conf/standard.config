executor.name = 'local'
docker.enabled = true
singularity.enabled = false

process {
    withName: 'basecall' {
        container = 'genomicpariscentre/guppy'
    }

    withName: 'raw_fastqc|trimmed_fastqc' {
        container = 'staphb/fastqc:latest'
    }

    withName: 'multiqc' {
        container = 'ewels/multiqc:latest'
    }
    
    withName: 'demultiplex_stats|reverse_complement|adapter_trim' {
        container = 'ahr1/demultiplex'
    }
}